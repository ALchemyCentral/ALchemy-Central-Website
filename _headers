/*
  # Security Headers für GitHub Pages
  
  # Verhindert Clickjacking-Angriffe
  X-Frame-Options: DENY
  
  # Aktiviert XSS-Schutz im Browser
  X-XSS-Protection: 1; mode=block
  
  # Verhindert MIME-Type Sniffing
  X-Content-Type-Options: nosniff
  
  # Erzwingt HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Referrer Policy - schützt Privatsphäre
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy - deaktiviert unnötige Browser-Features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=()
  
  # Content Security Policy - verhindert XSS und Code-Injection
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://formspree.io; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://formspree.io https://www.emailjs.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://formspree.io;
